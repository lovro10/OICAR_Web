@model CARSHARE_WEBAPP.ViewModels.LoginVM

@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <div class="login-card">
        <h1 class="brand">CARSHARE</h1>
        <h4 class="mb-4">Login</h4>

        <form asp-action="Login" method="post" novalidate>
                @Html.AntiForgeryToken()    

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-block btn-login mb-3">Login</button>
            <a asp-controller="Home" asp-action="Index" class="link-home">← Back to Home</a>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
}


