@model List<CARSHARE_WEBAPP.ViewModels.OglasVoznjaVM>

@{
    ViewData["Title"] = "Ride list";
}

<h2 class="text-center my-4">Ride list</h2>

<div class="container">
    <div class="row">
        @foreach (var oglas in Model)
        {
            <div class="col-md-12 mb-4">
                <div class="card shadow-sm p-3 d-flex flex-column" style="height: 100%;">
                    <h4 class="mb-3 fw-bold">@oglas.Polaziste → @oglas.Odrediste</h4>

                    <div class="row mb-2 flex-grow-1">
                        <div class="col-md-3">
                            <strong>Driver:</strong><br />
                            <span class="fs-5">@oglas.Ime @oglas.Prezime - @oglas.Username</span>
                        </div>
                        <div class="col-md-3">
                            <strong>Car:</strong><br />
                            <span class="fs-5">@oglas.Marka @oglas.Model - @oglas.Registracija</span>
                        </div>
                        <div class="col-md-3">
                            <strong>Departure:</strong><br />
                            <span class="fs-5">@oglas.DatumIVrijemePolaska.ToString("dd.MM.yyyy HH:mm")</span>
                        </div>
                        <div class="col-md-3">
                            <strong>Arrival:</strong><br />
                            <span class="fs-5">@oglas.DatumIVrijemeDolaska.ToString("dd.MM.yyyy HH:mm")</span>
                        </div>
                    </div>

                    <div class="row align-items-center flex-grow-1">
                        <div class="col-md-3">
                            <strong>Joined:</strong><br />
                            <span class="fs-5">@oglas.PopunjenoMjesta/@oglas.BrojPutnika</span>
                        </div>
                        <div class="col-md-3">
                            <strong>Cost per passenger:</strong><br />
                            <span class="fs-5">@oglas.CijenaPoPutniku?.ToString("0.00")</span>
                        </div>
                        <div class="col-md-6">
                            <strong>Status:</strong><br />
                            <span class="fs-5">@oglas.StatusVoznjeNaziv</span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mt-auto">
                        <a asp-controller="PorukaVoznja" asp-action="Join" asp-route-oglasVoznjaId="@oglas.IdOglasVoznja" class="btn btn-success btn-sm">Chat</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
