@model CARSHARE_WEBAPP.ViewModels.VoziloVM

@{
    ViewData["Title"] = "Brisanje Vozila";
}

<section class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">⚠️ Potvrda brisanja vozila</h4>
        </div>

        <div class="card-body">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Idvozilo" />

                <div class="mb-3">
                    <label class="form-label">Naziv vozila</label>
                    <input type="text" class="form-control" value="@Model.Naziv" readonly />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Marka</label>
                        <input type="text" class="form-control" value="@Model.Marka" readonly />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Model</label>
                        <input type="text" class="form-control" value="@Model.Model" readonly />
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label">Registracija</label>
                    <input type="text" class="form-control" value="@Model.Registracija" readonly />
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">🗑️ Izbriši</button>
                    <a asp-action="Index" class="btn btn-secondary">⬅️ Odustani</a>
                </div>
            </form>
        </div>
    </div>
</section>
